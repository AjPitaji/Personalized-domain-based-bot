    <style>
      .hamburger {
        font-size: 30px;
        padding: 5px;
        cursor: pointer;
        z-index: 99;
        position: fixed;
        top: 10px;
        left: 10px;
        color: #fff;
      }

      .sidebar {
        width: 0;
        height: 100%;
        background-color: rgb(35, 35, 46);
        color: white;
        position: fixed;
        top: 0;
        left: 0;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
        z-index: 2;
      }

      a{
          color: white !important; 
          text-transform: uppercase;  
      }
    </style>
    <script>
      function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        if (sidebar.style.width === "0px" || sidebar.style.width === "") {
          sidebar.style.width = "250px";
        } else {
          sidebar.style.width = "0px";
        }
      }
    </script>
  </body>
</html>
